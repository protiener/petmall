/* pages/address/address.wxss */
page{
  background-color: rgb(250, 250, 250);
}
.input-address{
  width: 100%;
  height: 80rpx;
  position: fixed;
  top: 0;
  background-color: white;
  text-align: center;
  line-height: 70rpx;
  z-index: 999;
  font-size: 34rpx;
}
.input-address image{
  width: 50rpx;
  height: 50rpx;
  float: right;
  position: fixed;
  right: 20rpx;
  top: 15rpx;
}
.address{
  margin: 100rpx 5%;
}
.address-item{
  display: flex;
  border-radius: 20rpx;
  background-color: white;
  margin-top: 20rpx;
}
.ad-info{
  width: 80%;
}
.ad-info text{
  width: 100%;
  display: block;
  height: 40rpx;
  padding: 10rpx 20rpx;
  font-size: 30rpx;
  text-overflow: ellipsis;
  white-space: normal;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.address-update{
  width: 20%;
  text-align: center;
  line-height: 200rpx;
  font-size: 26rpx;
}
.update-hover{
  color: #ff5557;
}