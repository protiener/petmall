/* pages/community/community.wxss */
page{
  background-color: rgb(248, 248, 248);
}
.community{
  margin-top: 100rpx;
  width: 100%;
}
.community-box{
  width: 96%;
  background-color: white;
  margin:2%;
  border-radius: 20rpx;
}
.user-info{
  width: 100%;
  height: 120rpx;
  display: flex;
  margin: 10rpx 0;
}
.user-info image{
 width: 100rpx;
 height: 100rpx;
 border-radius: 50%;
 margin: 10rpx;
}
.info-nickname{
  display: block;
  height: 60%;
  margin-left: 20rpx;
  width: 500rpx;
  line-height: 72rpx;
  font-size: 34rpx;
}
.info-date{
  display: block;
  height: 40%;
  margin-left: 20rpx;
  width: 500rpx;
  line-height: 40rpx;
  font-size: 26rpx;
}
.essay-content{
  width: 100%;
}
.essay-content img{
  width: 100%;
}
.swiper{
  width: 100%;
  height: 480rpx;
}
.swiper-item{
  width: 100%;
  height: 100%;
}
.swiper-image{
  width: 100%;
  height: 100%;
}
.content-text{
  width: 100%;
}
.text-title{
  padding-left: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.content-text text{
  display: block;
  width: 100%;
  padding: 10rpx 30rpx;
  font-size: 26rpx;
}
.input-essay{
  width: 100%;
  height: 80rpx;
  position: fixed;
  top: 0;
  background-color: white;
  text-align: center;
  line-height: 70rpx;
  z-index: 999;
  font-size: 34rpx;
}
.input-essay image{
  width: 50rpx;
  height: 50rpx;
  float: right;
  position: fixed;
  right: 20rpx;
  top: 15rpx;
}
.comment{
  width: 94%;
  margin: 0 3%;
  padding-bottom: 10rpx;
}
.comment-ct{
  width: 100%;
  margin-bottom: 10rpx;
}
.comment-count{
  width: 100%;
  height: 50rpx;
  font-size: 26rpx;
  line-height: 50rpx;
  color: gainsboro;
}
.comment-item{
  width: 100%;
  height: 50rpx;
  font-size: 26rpx;
  line-height: 50rpx;
  
}
.comment-discuss{
  height: 80rpx;
  width: 100%;
  display: flex;
}
.comment-discuss image{
  width: 10%;
  margin-right: 10rpx;
}
.comment-discuss input{
  width: 78%;
  height: 75%;
  border: solid 2rpx gainsboro;
  border-radius: 10rpx;
  margin-right: 2%;
  padding: 0 10rpx;
  font-size: 28rpx;
}
.comment-discuss button{
  width: 15%;
  height: 80%;
  background-color: #ff5557;
  color: white;
  margin: 0;
  padding: 0;
}
.comment-discuss button text{
  font-size: 28rpx;
  line-height: 64rpx;
  display: block;
}